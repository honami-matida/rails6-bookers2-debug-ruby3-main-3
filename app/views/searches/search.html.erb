<h2>Books search for "test"</h2>

<table class='table'>
  <% if @range == "User" %>
    <thead>
      <tr>
        <th></th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= link_to user.name,user %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= link_to book.title,book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
